}

void USCI_A0_TX (char* buffer, unsigned char size)
{
	unsigned char i = 0;

	for(i=0;i<size;i++)
	{
		while(!(IFG2&UCA0TXIFG));
		while(P2IN & BIT6);
		UCA0TXBUF = 0x31;
	}
}



