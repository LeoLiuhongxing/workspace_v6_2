#include "IIC.h"
#include <stdbool.h>

void led_control(bool led_state)
{
	unsigned char Dev_addr;
	unsigned char AddrLow;
	unsigned char AddrHigh;
	unsigned int tmp;

	AddrLow = (unsigned char)tmp;
	AddrHigh = (unsigned char)(tmp>>8);
	Dev_addr =CAT3626_ADDRESS;
	i2c_start();
	i2c_SendByte(Dev_addr);
	if(i2c_check_ACK() == FALSE)
	{
	return AckError;
	}
	i2c_delay_ms(5);
	i2c_SendByte(AddrHigh);
	if(i2c_check_ACK() == FALSE)
	{
	return AckError;
	}
	i2c_SendByte(AddrLow);
	if(i2c_check_ACK() == FALSE)
	{
	return AckError;
	}
	while(n--)
	{
	i2c_SendByte(*p++);
	if(i2c_check_ACK() == FALSE)
	{
	 return AckError;
	}
	}
	i2c_stop();
	i2c_delay_ms(10);
	return 0;
}


